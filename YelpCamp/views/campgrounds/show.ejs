<% include ../partials/header.ejs%>

<div class="container">
    <div class="row">
        <div class = "col-md-3">
            <h3>YelpCamp</h3>
            <div class="list-group">
                <a href="" class = "list-group-item active">info1</a>
                <a href="" class = "list-group-item ">info2</a>
                <a href="" class = "list-group-item ">info3</a>
            </div>
        </div>
           <div class="col-md-9">
               <div class="thumbnail">
                    <img src="<%=campground.image%>" alt="" class="img img-responsive">
                    <div class="caption-full">
                            <h4 class="pull-right">$9/night</h4>
                            <h4> <a href=""><%= campground.name%></a></h4> 
                            <p><%=campground.description%></p>
                    </div>
                    <hr>
               </div>
               <div class="well">
                    <div class="text-right">
                            <a href="/campgrounds/<%=campground._id%>/comments/new" class="btn btn-success">Comment</a>
                            
                    </div>
                    <hr>
                    <% campground.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                   <strong> <%=comment.author%></strong>
                                    <span class="pull-right">
                                        10 days ago 
                                    </span> 
                                   - <%=comment.text%>
                            </div>
                        </div>
                        
                        
                    
                    <%})%>

                </div>
                
           </div>
    </div>
    
    

   
    

</div>


<% include ../partials/footer.ejs%>

