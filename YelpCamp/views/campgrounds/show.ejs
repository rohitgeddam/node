<div class="container">
    <div class="row">
        <div class = "col-md-3">
            <h3>YelpCamp</h3>
            <div class="list-group">
                <a href="" class = "list-group-item active">info1</a>
                <a href="" class = "list-group-item ">info2</a>
                <a href="" class = "list-group-item ">info3</a>
            </div>
        </div>
           <div class="col-md-9">
               <div class="thumbnail">
                    <img src="<%=campground.image%>" alt="" class="img img-responsive">
                    <div class="caption-full">
                            <h4 class="pull-right">$9/night</h4>
                            <h4> <a href=""><%= campground.name%></a></h4> 
                            <em>Created By - <%= campground.author.username%></em>
                            <p><%=campground.description%></p>

                        
                            <% if(currentUser && campground.author.id.equals(currentUser.id)){ %>
                            <a class="btn btn-warning btn-xs" href="/campgrounds/<%= campground.id%>/edit">Edit</a>
                            <a class="btn btn-danger btn-xs" href="/campgrounds/<%= campground.id%>/delete">Delete</a>
                            <% } %>

                    </div>
                    <hr>
               </div>
               <div class="well">
                    <div class="text-right">
                            <a href="/campgrounds/<%=campground._id%>/comments/new" class="btn btn-success">Comment</a>
                            
                    </div>
                    <hr>
                    <% campground.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                   <strong> <%=comment.author.username%></strong> - <%=comment.text%>
                                   <% if(currentUser && comment.author.id.equals(currentUser.id)){ %>
                                    <br>
                                    <a class="btn btn-warning btn-xs"href="/campgrounds/<%=campground.id%>/comments/<%=comment.id%>/edit">Edit</a>
                                    <form id="commentDelete" action="/campgrounds/<%=campground.id%>/comments/<%=comment.id%>?_method=delete" method="post">
                                       <button class="btn btn-danger btn-xs ">Delete</button>
                                    </form>
                                   
                                  
                                   <% } %> 
                                   <span class="pull-right">
                                        10 days ago 
                                    </span> 
                                  
                                  
                                   
                                   <hr>
                            </div>
                        </div>
                        
                        
                    
                    <%})%>

                </div>
                
           </div>
    </div>
    
    

   
    

</div>


