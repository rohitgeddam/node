

<% include ../partials/header.ejs%>


<div class="container">
	<div class="row">
		<h1 style="text-align: center">Create a new campground</h1>

		<div style="width:30%;margin:50px auto;">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="campground[name]" placeholder="name" value="<%= campground.name%>">
			</div>

			<div class="form-group">
			<input class="form-control" type="text" name="campground[image]" placeholder="image url" value="<%= campground.image%>">
			</div>

			<div class="form-group">

			<textarea name="campground[description]" rows="8" cols="80" placeholder="Description here" class="form-control"><%= campground.description%>"</textarea>
			</div>
			<div class="form-group">
			<button type="submit" name="" class="btn btn-primary btn-lg btn-block">Update</button>
			</div>
			<a href="/campgrounds" class="btn btn-danger btn-lg btn-block">Go Back</a>
			</div>

		</div>
			</form>

</div>

<%include ../partials/footer.ejs%>
