<% include partials/header.ejs%>


<div class="container">
	<div class="row">
		<h1 style="text-align: center">Create a new campground</h1>

		<div style="width:30%;margin:50px auto;">
			<form action="/campgrounds" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="name" placeholder="name">
			</div>

			<div class="form-group">
			<input class="form-control" type="text" name="image" placeholder="image url">
			</div>

			<div class="form-group">

			<textarea name="description" rows="8" cols="80" placeholder="Description here" class="form-control"></textarea>
			</div>
			<div class="form-group">
			<input type="submit" name="" class="btn btn-primary btn-lg btn-block">
			</div>
			<a href="/campgrounds" class="btn btn-danger btn-lg btn-block">Go Back</a>
			</div>

		</div>
			</form>

</div>

